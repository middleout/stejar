{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "charset": "utf8",
        "noEmitOnError": false,
        "noImplicitAny": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "jsx": "preserve",
        "pretty": true,
        "listFiles": false,
        "allowJs": false,
        "baseUrl": "./",
        "types": [],
        "lib": ["es2015", "dom", "es2016"]
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./node_modules/@stejar/compiler/types/*.d.ts", "./types/**/*.d.ts"]
}
