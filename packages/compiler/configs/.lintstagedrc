{
    "gitDir": "../",
    "linters": {
        "**/src/**/*.{js,jsx,ts,tsx}": [
            "prettier --write --print-width 120 --tab-width 4 --trailing-comma all --jsx-bracket-same-line --config ./.prettierrc",
            "git add"
        ],
        "*.scss": [
            "stylefmt",
            "stylelint --syntax scss",
            "git add"
        ]
    }
}
