{
    "publishConfig": {
      "access": "public"
    },
    "main": "./lib/index.js",
    "module": "./es/index.js",
    "jsnext:main": "./es/index.js",
    "typings": "./typings/index.d.ts",
    "directories": {
        "test": "tests"
    },
    "files": [
        "types",
        "es",
        "lib",
        "typings"
    ],
    "scripts": {
        "compile": "rimraf ./compiled && tsc --outDir ./compiled && babel ./compiled --source-maps inline --out-dir ./es",
        "typings": "rimraf ./typings && tsc --declaration --declarationDir ./typings --outDir ./compiled && rimraf ./compiled",
        "build": "rimraf ./lib && webpack && npm run typings",
        "integrate": "npm run build && cd ./../../__integration && npm install ./../packages/[name]",
        "test": "jest",
        "test-start": "jest --watch",
        "start": "webpack --watch"
    },
    "author": "Middleout",
    "license": "MIT",
    "dependencies": {},
    "devDependencies": {
        "@types/enzyme": "2.8.12",
        "@types/jest": "20.0.8",
        "@types/react-test-renderer": "15.5.5",
        "babel-core": "6.26.0",
        "babel-jest": "20.0.3",
        "babel-loader": "7.1.2",
        "babel-plugin-transform-react-jsx": "6.24.1",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-stage-0": "6.24.1",
        "case-sensitive-paths-webpack-plugin": "2.1.1",
        "circular-dependency-plugin": "3.0.0",
        "enzyme": "2.9.1",
        "jest": "20.0.4",
        "prettier": "1.7.4",
        "react": "15.6.2",
        "react-addons-test-utils": "15.6.2",
        "react-dom": "15.6.2",
        "react-test-renderer": "15.6.2",
        "rimraf": "2.6.2",
        "ts-jest": "20.0.14",
        "ts-loader": "2.3.7",
        "tslib": "1.8.0",
        "tslint": "5.8.0",
        "tslint-config-prettier": "1.6.0",
        "tslint-loader": "3.5.3",
        "typescript": "2.5.3",
        "webpack": "3.8.1",
        "webpack-node-externals": "1.6.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testMatch": [
            "**/__tests__/*.(ts|tsx|js)"
        ],
        "collectCoverageFrom": [
            "**/src/**"
        ],
        "collectCoverage": true,
        "coverageDirectory": "__tests__/__coverage__",
        "coverageReporters": [
            "lcov"
        ],
        "mapCoverage": true
    }
}
