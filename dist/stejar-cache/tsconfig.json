{
  "compileOnSave": false,
  "compilerOptions": {
	"target": "es6",
	"moduleResolution": "node",
	"sourceMap": false,
	"charset": "utf8",
	"noEmitOnError": false,
	"noImplicitAny": true,
	"noEmitHelpers": true,
	"importHelpers": true,
	"suppressImplicitAnyIndexErrors": true,
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"forceConsistentCasingInFileNames": false,
	"allowSyntheticDefaultImports": true,
	"noUnusedParameters": false,
	"noUnusedLocals": false,
	"jsx": "preserve",
	"pretty": true,
	"listFiles": false,
	"allowJs": false,
	"baseUrl": "./",
	"lib": [
	  "es2015",
	  "dom",
	  "es2016"
	]
  },
  "include": [
	"src/**/*.ts",
	"node_modules/@types"
  ],
  "exclude": [
	"node_modules"
  ]
}
